/**index.wxss**/

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* 餐厅信息样式 */
.restaurant-info {
  display: flex;
  padding: 20rpx;
  align-items: center;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.description {
  font-size: 26rpx;
  line-height: 1.4;
}

/* 搜索框样式 */
.search-container {
  padding: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
}

/* 分类导航样式 */
.category-nav {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.category-list {
  display: flex;
  justify-content: space-around;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 28rpx;
}

.category-item.active .category-name {
  color: #FF5722;
  font-weight: bold;
}

/* 推荐菜品样式 */
.recommended-dishes {
  padding: 20rpx;
  background-color: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.dish-scroll {
  white-space: nowrap;
}

.dish-list {
  display: flex;
  padding: 10rpx 0;
}

.dish-item {
  width: 280rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.dish-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx 8rpx 0 0;
}

.dish-info {
  padding: 15rpx;
}

.dish-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-price {
  font-size: 28rpx;
}

/* 扫码点餐按钮样式 */
.scan-btn-container {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.scan-btn {
  width: 80%;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 87, 34, 0.3);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}